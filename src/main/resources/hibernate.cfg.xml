        <mapping resource="com/discry/hibernate/a/one/Student.hbm.xml"/>
        <mapping resource="com/discry/hibernate/a/two/Teacher.hbm.xml"/>
        <mapping resource="com/discry/hibernate/b/Course.hbm.xml"/>
        -->
